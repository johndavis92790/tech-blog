<section class="comments">
  <div class="meta list-group">
    {{#each this}}
    <h6 class="mt-3 mx-3">Commented by {{user.username}} on {{format_date created_at}}</h6>
    <a class="list-group-item list-group-item-action danger mb-3 mx-3 border border-white">
      {{comment_text}}
    </a>
    {{/each}}
  </div>
</section>