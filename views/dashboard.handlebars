<section>
  <h2 class="fs-4 m-3">Create New Post</h2>
  <form class="new-post-form m-3">
    <div class="mb-3">
      <label for="post-title" class="form-label">Title</label>
      <input name="post-title" type="text" class="form-control" id="post-title" />
    </div>
    <div class="mb-3">
      <label for="post-content" class="form-label">Content</label>
      <input name="post-content" type="text" class="form-control" id="post-content" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2 class="fs-4 m-3">Your Posts</h2>
  <div class="list-group">
    {{#each posts as |post|}}
      {{> post-info post}}
    {{/each}}
  </div>
</section>
{{/if}}

<script src="/js/add-post.js"></script>